<h1>Update <%= @store.name %>'s Info</h1>
<form action="/stores/<%= @store.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="store_name">Edit this store's name:</label>
    <input class="form-control" type="text" name="store_name">
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" name="button">Update</button>
  </div>
</form>
